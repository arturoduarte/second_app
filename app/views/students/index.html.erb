<p id="notice"><%= notice %></p>

<h1 class="text-center">Estudiantes</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Edad</th>
			<th>Email</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	
	<tbody>
		<% @students.each do |student| %>
		<tr class="table-active">
			<td><%= student.name %></td>
			<td><%= student.age %></td>
			<td><%= student.email %></td>
			
			<td><%= link_to 'Mostrar', student, class: 'btn btn-info' %></td>
			<td><%= link_to 'Editar', edit_student_path(student), class: 'btn btn-primary' %></td>
			<td><%= link_to 'Eliminar', student, method: :delete, data: { confirm: 'Esta Seguro?' }, class: 'btn btn-warning' %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'Nuevo Estudiante', new_student_path, class: 'btn btn-primary' %>